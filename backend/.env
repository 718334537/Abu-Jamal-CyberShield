# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=cybershield_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000
